<div class="flex flex-col gap-2 items-end justify-between group max-w-[90%] mx-auto animate-in fade-in duration-500 ease-out">
  <div class="px-4 py-3 <%= 'bg-chat-message rounded-lg border border-border' unless @is_system %>">
    <%= body %>
  </div>
  <div class="flex flex-row gap-2 justify-between w-full opacity-0 group-hover:opacity-100 scale-95 group-hover:scale-100 transition-all duration-200">
    <% if info? %>
      <%= info %>
    <% else %>
      <div></div>
    <% end %>
    <div class="flex flex-row gap-2 justify-end">
      <% actions.each do |action| %>
        <%= action %>
      <% end %>
    </div>
  </div>
</div>
