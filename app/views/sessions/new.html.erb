<div class="mx-auto md:w-2/3 w-full text-text-primary">
  <!-- Flash Messages -->
  <% if alert = flash[:alert] %>
    <p class="py-2 px-3 bg-red-600 text-chat-area font-medium rounded-lg inline-block mb-5" id="alert"><%= alert %></p>
  <% end %>
  <% if notice = flash[:notice] %>
    <p class="py-2 px-3 bg-primary text-chat-area font-medium rounded-lg inline-block mb-5" id="notice"><%= notice %></p>
  <% end %>
  <!-- Page Header -->
  <h1 class="font-bold text-3xl mb-6">Sign in</h1>
  <!-- Sign-in Form -->
  <%= form_with url: session_url, class: "space-y-6" do |form| %>
    <!-- Email Field -->
    <div>
      <%= form.label :email_address, "Email Address", class: "block text-sm font-medium text-text-primary" %>
      <%= form.email_field :email_address, required: true, autofocus: true, autocomplete: "username", placeholder: "Enter your email address", value: params[:email_address], class: "block w-full px-3 py-2 mt-2 rounded-md border border-border bg-chat-entry text-text-primary placeholder-text-secondary focus:ring-primary focus:border-primary shadow-sm" %>
    </div>
    <!-- Password Field -->
    <div>
      <%= form.label :password, "Password", class: "block text-sm font-medium text-text-primary" %>
      <%= form.password_field :password, required: true, autocomplete: "current-password", placeholder: "Enter your password", maxlength: 72, class: "block w-full px-3 py-2 mt-2 rounded-md border border-border bg-chat-entry text-text-primary placeholder-text-secondary focus:ring-primary focus:border-primary shadow-sm" %>
    </div>
    <!-- Actions -->
    <div class="flex items-center gap-4">
      <%= form.submit "Sign in", class: "px-4 py-2 rounded-md bg-primary text-chat-area font-medium hover:bg-primary/90 transition-colors" %>
      <%= link_to "Sign up", new_user_path, class: "px-4 py-2 rounded-md bg-sidebar text-text-primary font-medium hover:bg-sidebar/90 transition-colors" %>
    </div>
    <!-- Forgot Password -->
    <div class="mt-4 text-sm text-text-secondary">
      <%= link_to "Forgot password?", new_password_path, class: "text-primary underline hover:no-underline cursor-pointer" %>
    </div>
  <% end %>
</div>
