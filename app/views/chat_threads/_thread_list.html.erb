<%= turbo_frame_tag dom_id(chat_thread) do %>
  <%= link_to chat_thread_path(chat_thread), 
      class: "flex items-center px-4 py-3 text-sm font-medium #{request.path == chat_thread_path(chat_thread) ? 'bg-indigo-50 text-indigo-600' : 'text-gray-600 hover:bg-gray-50'}",
      data: { turbo_frame: "chat_content" } do %>
    <svg class="h-5 w-5 mr-3 #{current_page?(chat_thread_path(chat_thread)) ? 'text-indigo-600' : 'text-gray-400'}" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 10h.01M12 10h.01M16 10h.01M9 16H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-5l-5 5v-5z" />
    </svg>
    <div class="flex-1 min-w-0">
      <p class="truncate"><%= chat_thread.title %></p>
      <p class="text-xs text-gray-500"><%= time_ago_in_words(chat_thread.created_at) %> ago</p>
    </div>
  <% end %>
<% end %> 