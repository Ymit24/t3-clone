<%= form_with(model: [@chat, @message], class: "flex w-full max-h-32 flex-row items-center justify-between gap-4 p-4 bg-sidebar") do |form| %>
  <%= render ButtonComponent.new(icon:"chevron-down", variant: :secondary) %>
  <%= form.select :llm_model_id,
                  options_from_collection_for_select(LlmModel.all, :id, :name),
                  {},
                  {
                    class: "w-28 bg-transparent text-text-primary text-sm border-0 focus:ring-0 focus:outline-none appearance-none pr-8 py-2 pl-2 cursor-pointer",
                    data: { dropdown_toggle: "model-dropdown" }
                  } %>
  <%= form.text_area :value,
              autocomplete: "off",
              placeholder: "Type your message here...",
              required: true,
              rows: 1,
              class: "flex-1 rounded-md resize-none border-0 bg-chat-entry p-2 text-base text-text-primary placeholder-text-secondary focus:border-primary focus:outline-none focus:ring-0 max-h-32 overflow-y-auto"%>
  <%= render ButtonComponent.new(icon:"paper-airplane", variant: :primary) %>
<% end %>
