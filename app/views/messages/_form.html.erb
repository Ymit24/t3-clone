<%= form_with(model: [@chat, message], id: dom_id(message), class: "flex flex-row items-center justify-between gap-4 w-full h-32 transition-all duration-100 ease-in-out p-4 bg-sidebar") do |form| %>
  <%= form.select :llm_model_id,
                  options_from_collection_for_select(LlmModel.all, :id, :name),
                  {},
                  {
                    class: "w-28 bg-transparent text-text-primary text-sm border-0 focus:ring-0 focus:outline-none appearance-none pr-8 py-2 pl-2 cursor-pointer",
                  } %>
  <%= form.text_area :value,
              autocomplete: "off",
              placeholder: "Type your message here...",
              required: true,
              class: "flex-1 rounded-md resize-none border-0 bg-chat-entry p-2 text-base text-text-primary p1laceholder-text-secondary focus:border-primary focus:outline-none focus:ring-0 overflow-y-auto"%>
  <%= render ButtonComponent.new(icon: "paper-airplane", type: :submit, variant: :primary) %>
<% end %>
