<%# locals: (message:) %>
<%= turbo_frame_tag dom_id(message), class: "self-start", id: dom_id(message) do %>
  <%= render ChatBubbleComponent.new(is_system: true) do |bubble| %>
    <%= bubble.with_body do %>
      <div class="prose prose-invert max-w-none">
        <%= markdown(message.value) %>
      </div>
    <% end %>
    <%= bubble.with_info do %>
      <span class="font-thin"><%= message.llm_model.model %></span>
    <% end %>
    <%= bubble.with_action_button(href: chat_message_retry_path(message.chat, message), icon: "arrow-path", color: "text-blue-500") %>
  <% end %>
<% end %>
