<%# locals: (message:) %>
<%= turbo_frame_tag dom_id(message), class: "self-start", id: dom_id(message) do %>
  <%= render ChatBubbleComponent.new do |bubble| %>
    <%= bubble.with_body { message.value } %>
    <%= bubble.with_action_link(href: edit_chat_message_path(message.chat, message), icon: "arrow-path", color: "text-blue-500") %>
  <% end %>
<% end %>
