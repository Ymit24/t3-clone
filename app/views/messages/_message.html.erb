<%# locals: (message:) %>
<% if message.is_system %>
  <%= render SystemChatMessageComponent.new(id: dom_id(message), msg: message.value, llm_model: message.llm_model) %>
<% else %>
  <%= render UserChatMessageComponent.new(id: dom_id(message), msg: message.value, llm_model: message.llm_model) %>
<% end %>
